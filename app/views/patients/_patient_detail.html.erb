<div class="patient-details d-md-flex justify-content-md-between show-patient-content">
  <div class="row col-md-9 col-12">
    <h3 class="name-content col-12 col-md-6">氏名:　<strong class="name"><%= patient.full_name %></strong>　様</h3>
    <div class="sex-and-age-content col-6 col-md-3">
      <p>性別:　<strong class="sex"><%= patient.sex_i18n %></strong></p>
      <p>年齢:　<strong class="age"><%= patient.age %></strong>　歳</p>
    </div>
    <div class="height-and-weight-content col-6 col-md-3">
      <p>身長:　<strong class="height"><%= patient.height %></strong>　cm</p>
      <p>体重:　<strong class="weight"><%= patient.weight %></strong>　kg</p>
    </div>
  </div>
  <div class="edit-link right-content col-6 col-md-3">
    <%= link_to "基本情報を編集する", edit_patient_path, class: "custom-btn btn-radius-solid d-none d-md-block" %>
    <%= link_to "編集", edit_patient_path, class: "custom-btn btn-radius-solid d-block d-md-none" %>
  </div>
</div>
